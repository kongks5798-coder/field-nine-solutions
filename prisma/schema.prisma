// Field Nine - Prisma Schema
// Supabase PostgreSQL과 호환되는 스키마

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Product Model (상품) - 참조용
// ============================================
// 주의: 실제 products 테이블은 Supabase에서 관리
// Prisma는 MallInventory와의 관계만 정의 (외래키 참조용)
// 실제 상품 데이터는 Supabase Client로 접근
model Product {
  id          String         @id // Supabase UUID를 문자열로 저장
  mallStocks  MallInventory[] // 쇼핑몰별 재고 분배 현황

  @@map("products")
}

// ============================================
// MallInventory Model (쇼핑몰별 재고 분배)
// ============================================
// 쿠팡, 네이버, 자사몰 등 각 쇼핑몰에 할당된 재고 관리
model MallInventory {
  id        String   @id @default(cuid())
  mallName  String   // 쇼핑몰 이름 (쿠팡, 네이버, 자사몰 등)
  stock     Int      @default(0) // 해당 몰에 할당된 재고 수량 (>= 0 제약은 DB 레벨에서)
  productId String   // Supabase products.id (UUID를 문자열로 저장)
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, mallName]) // 같은 상품에 같은 쇼핑몰은 하나만
  @@map("mall_inventory")
  @@index([productId])
  @@index([mallName])
}

// ============================================
// FeatureSubscription Model (기능 구독)
// ============================================
// 100가지 기능 중 활성화된 기능 관리
// 각 기능은 월 구독료가 있음
model FeatureSubscription {
  id          String   @id @default(cuid())
  featureId   String   @unique // 100가지 기능 중 ID (예: "ai-demand-forecast")
  featureName String   // 기능명 (예: "AI 수요예측")
  isActive    Boolean  @default(false) // 활성화 여부
  monthlyFee  Int      @default(0) // 해당 기능의 월 구독료 (원)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("feature_subscriptions")
  @@index([featureId])
  @@index([isActive])
}

// ============================================
// NextAuth.js Models (인증 시스템)
// ============================================
// NextAuth.js가 사용하는 테이블들
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
