# NEXUS-X Secrets (EXAMPLE - DO NOT COMMIT REAL VALUES)
# Copy to secrets.yaml and fill in actual values

apiVersion: v1
kind: Secret
metadata:
  name: nexus-secrets
  namespace: nexus-trading
type: Opaque
stringData:
  # Telegram Bot for alerts
  telegram-bot-token: "YOUR_TELEGRAM_BOT_TOKEN"
  telegram-chat-id: "YOUR_TELEGRAM_CHAT_ID"

  # Polygon Network
  polygon-rpc-url: "https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY"
  polygon-private-key: "YOUR_POLYGON_PRIVATE_KEY"

  # Market API Keys
  jepx-api-key: "YOUR_JEPX_API_KEY"
  aemo-api-key: "YOUR_AEMO_API_KEY"
