# ============================================================================
# FIELD NINE OS - UNIFIED ENVIRONMENT CONFIGURATION
# Version: v1.0.9 (Phase 8.5 Integration)
# ============================================================================
#
# ┌─────────────────────────────────────────────────────────────────────────────┐
# │                    FIELD NINE OS ENVIRONMENT                                │
# ├─────────────────────────────────────────────────────────────────────────────┤
# │                                                                             │
# │  This configuration unifies:                                                │
# │  • NEXUS-X Energy Trading Platform                                         │
# │  • K-Universal (Nomad Monthly) Infrastructure                              │
# │  • Field Nine Solutions Main Services                                       │
# │                                                                             │
# │  Brand Identity: NEXUS-X → Field Nine Energy                               │
# │  Domain: nexus-x.io → fieldnine.io                                         │
# │                                                                             │
# └─────────────────────────────────────────────────────────────────────────────┘

# ============================================================================
# FIELD NINE CORE IDENTITY
# ============================================================================
FIELDNINE_ENV=production
FIELDNINE_VERSION=1.0.9
FIELDNINE_BRAND_NAME="Field Nine Energy"
FIELDNINE_COMPANY="Field Nine Solutions"

# Primary Domain (Unified)
FIELDNINE_DOMAIN=fieldnine.io
FIELDNINE_DASHBOARD_URL=https://nexus.fieldnine.io
FIELDNINE_MOBILE_URL=https://m.fieldnine.io
FIELDNINE_API_URL=https://api.fieldnine.io
FIELDNINE_AUTH_URL=https://auth.fieldnine.io

# Legacy Domain (Redirects - Deprecated)
LEGACY_NEXUS_DOMAIN=nexus-x.io

# ============================================================================
# AUTHENTICATION (Migrated from K-Universal)
# ============================================================================

# Google OAuth 2.0 (Migrated from K-Universal)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://auth.fieldnine.io/callback/google

# Kakao OAuth 2.0 (Migrated from K-Universal)
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=https://auth.fieldnine.io/callback/kakao

# Apple Sign In (Optional)
APPLE_CLIENT_ID=io.fieldnine.auth
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_REDIRECT_URI=https://auth.fieldnine.io/callback/apple

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d
JWT_ISSUER=fieldnine.io

# MFA Configuration
MFA_ENABLED=true
MFA_REQUIRED_ROLES=CEO,ADMIN,TRADER
MFA_ISSUER="Field Nine Energy"

# ============================================================================
# DATABASE (Supabase - Unified)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# PostgreSQL Direct (For Go services)
DATABASE_URL=postgresql://user:password@db.supabase.co:5432/postgres

# ============================================================================
# ENERGY TRADING PLATFORM (formerly NEXUS-X)
# ============================================================================

# Market Adapters
FIELDNINE_ENERGY_ENABLED=true

# AEMO (Australian Energy Market Operator)
AEMO_API_KEY=your-aemo-api-key
AEMO_API_SECRET=your-aemo-api-secret
AEMO_PARTICIPANT_ID=FIELDNINE
AEMO_ENVIRONMENT=production
AEMO_RATE_LIMIT_DISPATCH=60
AEMO_RATE_LIMIT_FCAS=30
AEMO_RATE_LIMIT_BIDDING=10

# JEPX (Japan Electric Power Exchange)
JEPX_API_KEY=your-jepx-api-key
JEPX_API_SECRET=your-jepx-api-secret
JEPX_PARTICIPANT_ID=FIELDNINE
JEPX_ENVIRONMENT=production
JEPX_RATE_LIMIT_SPOT=30
JEPX_RATE_LIMIT_INTRADAY=20
JEPX_RATE_LIMIT_BALANCING=60
JEPX_RATE_LIMIT_FORWARD=5

# ============================================================================
# BLOCKCHAIN & SETTLEMENT
# ============================================================================

# NXUSD Stablecoin (Polygon Mainnet)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
POLYGON_CHAIN_ID=137
NXUSD_CONTRACT_ADDRESS=0x...
SETTLEMENT_CONTRACT_ADDRESS=0x...
SETTLEMENT_WALLET_ADDRESS=0x...
SETTLEMENT_PRIVATE_KEY=your-encrypted-private-key

# ZKP Configuration
ZKP_ENABLED=true
ZKP_PROVER_URL=https://prover.fieldnine.io
ZKP_CIRCUIT_HASH=0x...

# ============================================================================
# GKE INFRASTRUCTURE
# ============================================================================

# GCP Project
GCP_PROJECT_ID=fieldnine-prod
GCP_REGION=us-central1

# Multi-Region Clusters
GKE_CLUSTER_US=fieldnine-us-cluster
GKE_CLUSTER_EU=fieldnine-eu-cluster
GKE_CLUSTER_APAC=fieldnine-apac-cluster
GKE_CLUSTER_AU=fieldnine-australia-cluster
GKE_CLUSTER_JP=fieldnine-japan-cluster

# ============================================================================
# CLOUDFLARE
# ============================================================================
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel.fieldnine.io:4317
OTEL_SERVICE_NAME=fieldnine-energy

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Prometheus Metrics
METRICS_PORT=9090
METRICS_PATH=/metrics

# ============================================================================
# SECURITY
# ============================================================================

# Kill Switch
KILLSWITCH_ENABLED=true
KILLSWITCH_DAILY_LOSS_THRESHOLD=1000000
KILLSWITCH_WEEKLY_LOSS_THRESHOLD=2000000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200

# WAF (Cloud Armor)
WAF_ENABLED=true
WAF_POLICY=fieldnine-security-policy

# ============================================================================
# K-UNIVERSAL INTEGRATION (Nomad Monthly)
# ============================================================================
KUNIVERSAL_ENABLED=true
KUNIVERSAL_API_URL=https://nomad.fieldnine.io/api
KUNIVERSAL_SHARED_SESSION=true

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# OpenAI (AI Insights)
OPENAI_API_KEY=sk-your-openai-api-key

# Weather API (For renewable predictions)
WEATHER_API_KEY=your-weather-api-key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ENERGY_TRADING=true
FEATURE_ZKP_SETTLEMENT=true
FEATURE_AI_INSIGHTS=true
FEATURE_MOBILE_APP=true
FEATURE_REALTIME_SSE=true
FEATURE_DARK_MODE=false

# ============================================================================
# CORS & SECURITY HEADERS
# ============================================================================
CORS_ALLOWED_ORIGINS=https://fieldnine.io,https://nexus.fieldnine.io,https://m.fieldnine.io,https://nomad.fieldnine.io
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Request-ID

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
